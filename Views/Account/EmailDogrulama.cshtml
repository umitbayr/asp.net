@model EmailDogrulamaViewModel

<h2>E-posta Doğrulama</h2>

<form asp-action="EmailDogrulama" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Email">E-posta Adresi</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VerificationCode">Doğrulama Kodu</label>
        <input asp-for="VerificationCode" class="form-control" />
        <span asp-validation-for="VerificationCode" class="text-danger"></span>
    </div>

    <input type="submit" value="Doğrula" class="btn btn-success w-100 p-2" />

    
</form>
